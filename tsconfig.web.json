{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/env.d.ts",
    "src/renderer/**/*",
    "src/renderer/**/*.tsx",
    "src/preload/*.d.ts",
    "src/preload/electron.d.ts",
    "src/Types.d.ts"
  ],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": ["src/renderer/src/*"]
    },
    "types": [
      "electron-vite/node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "composite": true
  }
}
